index 4901e5e33..591443e94 100644
--- a/package.json
+++ b/package.json
@@ -23,7 +23,7 @@
     "babel-runtime": "^6.11.6",
     "bcrypt": "^2.0.0",
     "body-parser": "^1.15.0",
